{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#ABB2BF",
                    "properties": {
                        "template": "\u250c {{ if .WSL }}WSL - {{ end }}{{ .Icon }}",
                        "windows": "\uf17a"
                    },
                    "style": "powerline",
                    "type": "os"
                },
                {
                    "foreground": "#61AFEF",
                    "properties": {
                        "style": "full",
                        "template": " {{ .Path }} "
                    },
                    "style": "plain",
                    "type": "path"
                },
                {
                    "foreground": "#E5C07B",
                    "properties": {
                        "fetch_status": true,
                        "template": "<#757575,>|</> {{ .HEAD }}{{ .BranchStatus }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} "
                    },
                    "style": "plain",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#ffffff",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#e91e63{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true,
                        "template": " \ue23a <#757575,>|</>"
                    },
                    "style": "plain",
                    "type": "exit"
                },
                {
                    "foreground": "#ffffff",
                    "foreground_templates": [
                        "{{ if eq .Battery.State 3 }}#40c4ff{{ end }}",
                        "{{ if le .Percentage 20 }}#E06C75{{ else }}#ffffff{{ end }}"
                    ],
                    "properties": {
                        "template": " {{ if not .Error }}{{ if lt .Percentage 10}}\uf58d{{ else if lt .Percentage 20 }}\uf579{{ else if lt .Percentage 30 }}\uf57a{{ else if lt .Percentage 40 }}\uf57b{{ else if lt .Percentage 50 }}\uf57c{{ else if lt .Percentage 60 }}\uf57d{{ else if lt .Percentage 70 }}\uf57e{{ else if lt .Percentage 80 }}\uf57f{{ else if lt .Percentage 90 }}\uf580{{ else if lt .Percentage 100 }}\uf581{{ else }}\uf578{{ end }} {{.Percentage}}{{ end }}{{.Error}}% <#757575,>|</>"
                    },
                    "style": "plain",
                    "type": "battery"
                },
                {
                    "foreground": "#007acc",
                    "properties": {
                        "template": " {{ .Name }}"
                    },
                    "style": "plain",
                    "type": "shell"
                },
                {
                    "foreground": "#ff8080",
                    "properties": {
                        "root_icon": "root",
                        "template": " <#757575,>as</> \uf0e7"
                    },
                    "style": "plain",
                    "type": "root"
                },
                {
                    "foreground": "#689f38",
                    "properties": {
                        "template": " <#757575,>|</> {{ .CurrentDate | date .Format }}",
                        "time_format": "15:04:05"
                    },
                    "style": "plain",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#ABB2BF",
                    "properties": {
                        "template": "\u2514"
                    },
                    "style": "plain",
                    "type": "text"
                },
                {
                    "foreground": "#ffffff",
                    "properties": {
                        "template": "{{ if or (eq .Shell \"powershell\") (eq .Shell \"pwsh\") }} \uf054{{ else }} ${{ end }}"
                    },
                    "style": "plain",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{.Shell}} :: {{.Folder}}",
    "final_space": true,
    "osc99": true,
    "version": 1
}